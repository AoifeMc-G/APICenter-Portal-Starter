{
  "networking": {
    "allowedIpRanges": ["AzureFrontDoor.Backend"]
  },
  "forwardingGateway": {
    "requiredHeaders": {
      "X-Azure-FDID": "38a9b306-7e71-45d7-affa-5a101cef5445"
    },
    "allowedForwardedHosts": [
      "afd-ki-api-glb-001-uat-endpoint-b9cbdkbcc3f7grbr.a03.azurefd.net",
      "afd-ki-api-glb-001-apic-endpoint-craggrgufpaph6f2.a03.azurefd.net",
      "portal-uat.api.kantar.com"
    ]
  },
  "routes": [
    {
      "route": "/.auth/*",
      "allowedRoles": ["anonymous"],
      "headers": {
        "Cache-Control": "no-cache, no-store, must-revalidate, private",
        "Pragma": "no-cache",
        "Expires": "0"
      }
    },
    {
      "route": "/login*",
      "allowedRoles": ["anonymous"],
      "headers": {
        "Cache-Control": "no-cache, no-store, must-revalidate, private",
        "Pragma": "no-cache",
        "Expires": "0"
      }
    },
    {
      "route": "/logout*",
      "allowedRoles": ["anonymous"],
      "headers": {
        "Cache-Control": "no-cache, no-store, must-revalidate, private",
        "Pragma": "no-cache",
        "Expires": "0"
      }
    },
    {
      "route": "/assets/*",
      "allowedRoles": ["anonymous"],
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable",
        "X-Content-Type-Options": "nosniff",
        "ETag": "strong"
      }
    },
    {
      "route": "/*.{js,css,woff,woff2,ttf,eot,svg,png,jpg,jpeg,gif,ico}",
      "allowedRoles": ["anonymous"],
      "headers": {
        "Cache-Control": "public, max-age=2592000",
        "X-Content-Type-Options": "nosniff",
        "ETag": "strong"
      }
    },
    {
      "route": "/*.{webp,avif,mp4,webm}",
      "allowedRoles": ["anonymous"],
      "headers": {
        "Cache-Control": "public, max-age=7776000",
        "X-Content-Type-Options": "nosniff",
        "ETag": "strong"
      }
    },
    {
      "route": "/*",
      "allowedRoles": ["anonymous"],
      "headers": {
        "X-Front-Door-Required": "true",
        "Cache-Control": "public, max-age=3600, must-revalidate"
      }
    },
    {
      "route": "/api/*",
      "allowedRoles": ["anonymous"],
      "headers": {
        "Cache-Control": "no-store"
      }
    }
  ],
  "responseOverrides": {
    "401": {
      "redirect": "/login"
    },
    "403": {
      "statusCode": 403,
      "rewrite": "/custom-403.html"
    }
  },
  "globalHeaders": {
    "X-Frame-Options": "DENY",
    "X-Content-Type-Options": "nosniff",
    "X-XSS-Protection": "1; mode=block",
    "Strict-Transport-Security": "max-age=31536000; includeSubDomains",
    "Content-Security-Policy": "default-src 'self'; style-src 'self' 'unsafe-inline'; script-src 'self'",
    "Referrer-Policy": "strict-origin-when-cross-origin",
    "X-CDN-Optimized": "true",
    "Vary": "Accept-Encoding, Accept"
  },
  "mimeTypes": {
    ".json": "application/json",
    ".js": "application/javascript",
    ".mjs": "application/javascript",
    ".css": "text/css",
    ".html": "text/html",
    ".htm": "text/html",
    ".xml": "application/xml",
    ".txt": "text/plain",
    ".svg": "image/svg+xml",
    ".png": "image/png",
    ".jpg": "image/jpeg",
    ".jpeg": "image/jpeg",
    ".gif": "image/gif",
    ".ico": "image/x-icon",
    ".woff": "font/woff",
    ".woff2": "font/woff2",
    ".ttf": "font/ttf",
    ".eot": "application/vnd.ms-fontobject",
    ".webp": "image/webp",
    ".avif": "image/avif",
    ".mp4": "video/mp4",
    ".webm": "video/webm"
  }
}
